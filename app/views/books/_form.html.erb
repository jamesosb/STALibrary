<%= form_for(@book, :html => { :class => "form-horizontal"}) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <p class="bg-danger notice"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</p>

      <ul class="bg-danger notice">
      <% @book.errors.full_messages.each do |message| %>
        <li class="notice"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
    <%= f.label :title, :class =>"col-sm-1 control-label" %>
      <div class="col-sm-10">
    <%= f.text_field :title, :class=> "form-control" %>
        </div>
    </div>

    <div class="form-group">
    <%= f.label :genre, :class =>"col-sm-1 control-label" %>
      <div class="col-sm-10">
    <%= f.select(:genre_id, Genre.all.collect {|a| [a.name, a.id]},{},{:class => "form-control"}) -%>
    </div>
    </div>

    <div class="form-group">
    <%= f.label :ISBN, :class =>"col-sm-1 control-label" %>
      <div class="col-sm-10">
    <%= f.text_field :ISBN, :class=> "form-control"  %>
    </div>
    </div>

    <div class="form-group">
    <%= f.label :bookimg, "Picture", :class =>"col-sm-1 control-label" %>
      <div class="col-sm-10">
    <%= f.file_field :bookimg, :class=> ""  %>
  </div></div>

  <div class="actions">
    <%= f.submit "Submit",:class=>"btn btn-custom-success" %>
  </div>
<% end %>
