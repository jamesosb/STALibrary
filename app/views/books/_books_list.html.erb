<div class="books-table">
<%= paginate @books %>

<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Genre</th>
    <th>ISBN</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>

        <td data-link="<%= book_path(book) %>"><% if book.bookimg.exists? %><%= image_tag book.bookimg.url(:thumb),:class=>"img-thumbnail" %> <%end%></td>

        <td data-link="<%= book_path(book) %>"><%= link_to book.title, book  %></td>

        <td data-link="<%= book_path(book) %>">
          <% @genres.each do |g|%> <% if g.id == book.genre_id %> <%=g.name %> <% end end%>
        </td>
        <td data-link="<%= book_path(book) %>"><%= book.ISBN %></td>

        <td><%= link_to edit_book_path(book), :class=> "btn btn-primary" do %><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%end%>
          <%= link_to  book, method: :delete, data: { confirm: 'Are you sure?' }, :class =>'btn btn-danger' do %><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%end%></td>
      </tr>
  <% end %>
  </tbody>
</table>

</br>

<%= paginate @books %>

</div>