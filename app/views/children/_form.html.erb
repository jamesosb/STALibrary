<%= form_for(@child, :html => { :class => "form-horizontal"}) do |f| %>
  <% if @child.errors.any? %>
    <div id="error_explanation ">
      <p class="bg-danger notice"><%= pluralize(@child.errors.count, "error") %> prohibited this child from being saved:</p>

      <ul class="bg-danger notice">
      <% @child.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
    <%= f.label :nickname, :class =>"col-sm-1 control-label" %>
      <div class="col-sm-10">
    <%= f.text_field :nickname, :class=> "form-control" %>
  </div></div>

    <div class="form-group">
    <%= f.label :forename, :class =>"col-sm-1 control-label" %>
      <div class="col-sm-10">
    <%= f.text_field :forename, :class=> "form-control" %>
  </div></div>

    <div class="form-group">
    <%= f.label :surname, :class =>"col-sm-1 control-label" %>
      <div class="col-sm-10">
    <%= f.text_field :surname, :class=> "form-control" %>
  </div></div>

    <div class="form-group">
    <%= f.label :UPN, :class =>"col-sm-1 control-label" %>
      <div class="col-sm-10">
    <%= f.text_field :UPN, :class=> "form-control" %>
  </div></div>

    <div class="form-group">
    <%= f.label :classroom, :class =>"col-sm-1 control-label" %>
      <div class="col-sm-10">
    <%= f.select :classroom, [["Select One", ""], ["Lilac", "Lilac"],["Juniper","Juniper"],["Cherry","Cherry"]],{},{:class => "form-control"}  %>
    </div></div>

    <div class="form-group">
      <%= f.label "Date on Entry", :class =>"col-sm-1 control-label" %>
      <div class="col-sm-10">
        <%= f.select :class_year, [["Select One", ""], ["2015", "2015"],["2016","2016"],["2017","2017"]],{},{:class => "form-control"}  %>
      </div></div>

    <div class="form-group">
      <%= f.label :bookimg, "Picture", :class =>"col-sm-1 control-label" %>
      <div class="col-sm-10">
        <%= f.file_field :childimg, :class=> ""  %>
      </div></div>

    <div class="actions">
      <%= f.submit "Submit",:class=>"btn btn-custom-success" %>
    </div>

<% end %>
