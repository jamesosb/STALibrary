

<h1>Children from previous years</h1>

<%= paginate @children %>

<%= link_to 'New Child', new_child_path , :class => "btn btn-custom-success" %>

</br></br>


<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Picture</th>
      <th>Nickname</th>
      <th>Forename</th>
      <th>Surname</th>
      <th>Entry Year</th>
      <th>Class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @children.each do |child| %>
      <tr >
        <td data-link="<%= child_path(child) %>"><% if child.childimg.exists? %><%= image_tag child.childimg.url(:thumb), :class => "thumbnail" %> <%end%></td>
        <td data-link="<%= child_path(child) %>"><%= link_to child.nickname, child  %></td>
        <td data-link="<%= child_path(child) %>"><%= child.forename %></td>
        <td data-link="<%= child_path(child) %>"><%= child.surname %></td>
        <td data-link="<%= child_path(child) %>"><%= child.class_year %></td>
        <td data-link="<%= child_path(child) %>"><%= child.classroom %></td>


        <td><%= link_to edit_child_path(child), :class=> "btn btn-primary" do %><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%end%>
          <%= link_to  child, method: :delete, data: { confirm: 'Are you sure?' }, :class =>'btn btn-danger' do %><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%end%></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @children %>

<%= link_to 'New Child', new_child_path , :class => "btn btn-custom-success" %>
