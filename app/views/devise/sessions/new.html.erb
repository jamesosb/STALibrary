
<div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="fitted-jumbotron">

    <div class="row">
      <div class="col-md-12 jumbotron-top"><h1 class="top-header">Welcome...</h1><%= image_tag "OwlLogo.png", :class => "owllogo" %></div>

    </div>
    <div class="row">
      <div class="col-md-12">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="large-textbox">
    <%= f.email_field :email, autofocus: true, :placeholder => "Email Address" %>
  </div>

  <div class="large-textbox">
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field styled-checkbox">
      <%= f.label :remember_me  do %>
      <%= f.check_box :remember_me %>
          <span class="checkbox"></span>
          <div class="checkbox-label"> <span class="checkbox-label"> Remember Me </span> </div>
      <% end %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Sign in", :class => 'btn btn-custom-success' %>
  </div>
<% end %>
      </div>
  </div>
  </div>
</div>

</div>